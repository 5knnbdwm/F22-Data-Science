{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs",  
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "./src",
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ],
  "typeRoots": [
    "../node_modules/types",
    "../types"
  ],
}